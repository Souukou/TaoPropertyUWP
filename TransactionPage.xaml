<Page
    x:Class="TaoPropertyUWP.TransactionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:TaoPropertyUWP.Models"
    xmlns:local="using:TaoPropertyUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <RelativePanel>
            <TextBlock
                x:Name="SubTitle"
                Margin="0,0,0,5"
                FontSize="20"
                RelativePanel.AlignLeftWithPanel="True"
                Text="交易流水" />
            <Button
                x:Name="RefreshButton"
                Click="RefreshButton_Click"
                Content="&#xE72C;"
                FontFamily="Segoe MDL2 Assets"
                FontSize="20"
                RelativePanel.AlignRightWithPanel="True" />
        </RelativePanel>
        <Grid
            Grid.Row="1"
            Height="30"
            Margin="0,0,0,2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="{ThemeResource SystemAccentColorLight3}" />
                    <GradientStop Offset="1" Color="{ThemeResource SystemAltHighColor}" />
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                Text="交易编号" />
            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                FontSize="16"
                Text="小区" />
            <TextBlock
                Grid.Column="2"
                VerticalAlignment="Center"
                FontSize="16"
                Text="所含账单" />
            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                FontSize="16"
                Text="交易时间" />
            <TextBlock
                Grid.Column="4"
                VerticalAlignment="Center"
                FontSize="16"
                Text="总金额" />
            <TextBlock
                Grid.Column="5"
                VerticalAlignment="Center"
                FontSize="16"
                Text="实付金额" />
            <TextBlock
                Grid.Column="6"
                VerticalAlignment="Center"
                FontSize="16"
                Text="费用减免" />
            <TextBlock
                Grid.Column="7"
                VerticalAlignment="Center"
                FontSize="16"
                Text="支付方式" />
        </Grid>
        <ListView
            Grid.Row="2"
            ItemsSource="{x:Bind ViewModel.Transactions}"
            SelectionMode="Extended">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="0" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="data:Transaction">
                    <Grid BorderThickness="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="{x:Bind getid}" />
                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="{x:Bind getsubdivisionname}" />
                        <TextBlock
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="{x:Bind getBills}" />
                        <TextBlock
                            Grid.Column="3"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="{x:Bind getCtreateTime}" />
                        <TextBlock
                            Grid.Column="4"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="{x:Bind getTotalCost}" />
                        <TextBlock
                            Grid.Column="5"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="{x:Bind getFeePayable}" />
                        <TextBlock
                            Grid.Column="6"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="{x:Bind getFeeWaiver}" />
                        <TextBlock
                            Grid.Column="7"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="{x:Bind getPaymentMethod}" />
                    </Grid>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>
